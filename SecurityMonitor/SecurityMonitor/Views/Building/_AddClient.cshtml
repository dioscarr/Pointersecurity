@model SecurityMonitor.Models.ClientsVM
           @using SecurityMonitor.Models;





 <!--visible on sm xs-->
@using (Html.BeginForm("AddClient", "Building", FormMethod.Post))
{
    
    <div class="hidden-md hidden-lg visible-sm visible-xs col-sm-12 col-xs-12    lightblue " style="min-height:250px;">

        <div class="col-sm-6 col-xs-6 "><h5>Client's Name</h5></div>
        <div class="col-sm-6 col-xs-6 "><h5>Client's Address</h5></div>
        <div class="col-sm-6 col-xs-6 ">

            @Html.TextBox("ClientName", null, new { @class = "form-control ClientName " })
        </div>
        <div class="col-sm-6 col-xs-6">@Html.TextBox("Address", null, new { @class = "form-control " })</div>

        <h5 class="col-sm-6 col-xs-6">City</h5>
        <h5 class="col-sm-6 col-xs-6">State</h5>
        <div class="col-sm-6 col-xs-6">  @Html.TextBox("city", null, new { @class = "form-control " })</div>
        <div class="col-sm-6 col-xs-6">
        @{IEnumerable<State> States = Model.States;
}
        @Html.DropDownList("State", new SelectList(States, "ID", "myState"), new { @class = "form-control" })</div>


        <h5 class="col-sm-6 col-xs-6">Zipcode</h5>
        <h5 class="col-sm-6 col-xs-6">Phone</h5>
        <div class="col-sm-6 col-xs-6"> @Html.TextBox("zipcode", null, new { @class = "form-control " })</div>
        <div class="col-sm-6 col-xs-6"> @Html.TextBox("Phone", null, new { @class = "form-control " })</div>




    </div>
    <div class="visible-sm visible-xs hidden-lg hidden-md col-sm-12 col-xs-12 lightblue center" style="padding-bottom:20px;
padding-top:10px; padding-left:30%;">
        <input type="submit" value="Add new Client" class="form-control AddClient" style="width:60%;" />
    </div>
}


  <!--visible on md lg-->
<div class="hidden-xs hidden-sm visible-md visible-lg col-md-2 col-lg-2  tile_height lightblue text-center" style="min-height:100%;">
    @using (Html.BeginForm("AddClient", "Building", FormMethod.Post))
        {
        <br />
        <h5>Client's Name</h5>
        @Html.TextBox("ClientName", null, new { @class = "form-control ClientName" })

        <hr />
        <h5>Client's Address</h5>
        @Html.TextBox("Address", null, new { @class = "form-control" })
        <hr />
        <h5>City</h5>
        @Html.TextBox("city", null, new { @class = "form-control" })
        <hr />
        <h5>State</h5>
        
            
       
            IEnumerable<State> States = Model.States;
        @Html.DropDownList("State", new SelectList(States, "ID", "myState"), new { @class = "form-control" })
      
        <hr />
        <h5>Zipcode</h5>
        @Html.TextBox("zipcode", null, new { @class = "form-control" })
        <hr />
        <h5>Phone</h5>
        @Html.TextBox("Phone", null, new { @class = "form-control" })
        <hr />

        <input class="btn form-control AddClient" type="submit" value="Submit" />
        }
</div>



        @section Scripts {
            @Scripts.Render("~/bundles/jqueryval")
        }
