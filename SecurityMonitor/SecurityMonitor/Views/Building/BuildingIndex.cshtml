@model IEnumerable<SecurityMonitor.Models.BuildingInfoVM>

@{
    ViewBag.Title = "BuildingIndex";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row " style="border:none; background:white; ">
    <h1 class=" text-center " style="padding-top:0px; padding-bottom:20px;color:#808080; ">
        @Html.ActionLink("Add New Location", "AddBuilding", new { ClientID = (int)ViewBag.ClientID })
    </h1>
</div>
<div class="row ">
    <div class="col-lg-12 col-md-12">



        <table class="table table-striped table-hover">
            <tr class="">
                <th class="visible-lg visible-md hidden-sm hidden-xs col-md-2 ">
                    @Html.DisplayNameFor(model => model.BuildingName)
                </th>
                <th class="col-md-3 ">
                    @Html.DisplayNameFor(model => model.Address)
                </th>
                <th class="visible-lg visible-md hidden-sm hidden-xs col-md-2">
                    @Html.DisplayNameFor(model => model.City)
                </th>
                <th class="visible-lg visible-md hidden-sm hidden-xs col-md-1">
                    @Html.DisplayNameFor(model => model.States)
                </th>
                <th class="visible-lg visible-md hidden-sm hidden-xs col-md-1">
                    @Html.DisplayNameFor(model => model.ZipCode)
                </th>
                <th class="visible-lg visible-md hidden-sm hidden-xs col-md-1">
                    @Html.DisplayNameFor(model => model.NumberOfApart)
                </th>
                
                <th class="col-md-2">Advance Settings</th>
            </tr>
        </table>
    </div>
</div>
<div class="row ">
    <table class="table table-striped table-hover">

        @foreach (var item in Model)
        {
            <tr class="Locations_height hollow2 " onclick="location.href='/building/buildingProfile/?BuildingID=@item.ID'" style="  ">
                <td class="visible-lg visible-md hidden-sm hidden-xs col-md-2">
                    <button type="button"
                            class="btn btn-link"
                            onclick="location.href = '@Url.Action("BuildingProfile", "Building", new {BuildingID = item.ID})'">
                        @Html.DisplayFor(modelItem => item.BuildingName)
                    </button>
                </td>
                <td class="col-md-3">
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
                <td class="visible-lg visible-md hidden-sm hidden-xs col-md-2 ">
                    @Html.DisplayFor(modelItem => item.City)
                </td>
                <td class="visible-lg visible-md hidden-sm hidden-xs col-md-1">
                    @Html.DisplayFor(modelItem => item.States)
                </td>
                <td class="visible-lg visible-md hidden-sm hidden-xs col-md-1">
                    @Html.DisplayFor(modelItem => item.ZipCode)
                </td>
                <td class="visible-lg visible-md hidden-sm hidden-xs col-md-1">
                    @Html.DisplayFor(modelItem => item.NumberOfApart)
                </td>
               
                <td class="col-md-2">
                    @Html.ActionLink("Edit", "BuildingEdit", new { id = item.ID }) |
                    @Html.ActionLink("Delete", "BuildingDelete", new { id = item.ID, ClientID = item.ClientID})
                </td>
            </tr>
            @Html.HiddenFor(c=> item.ClientID)
        }

    </table>
</div>
