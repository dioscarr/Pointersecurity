@model IEnumerable<SecurityMonitor.Models.BuildingInfoVM>

@{
    ViewBag.Title = "BuildingIndex";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row " style="border:none; background:white; ">
    <h1 class=" text-center " style="padding-top:0px; padding-bottom:20px;color:#808080; ">
        @Html.ActionLink("Add New Location", "AddBuilding")
    </h1>
</div>
<div class="row ">



    <table class="table ">
        <tr class="">
            <th class="visible-lg visible-md hidden-sm hidden-xs">
                @Html.DisplayNameFor(model => model.BuildingName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th class="visible-lg visible-md hidden-sm hidden-xs">
                @Html.DisplayNameFor(model => model.City)
            </th>
            <th class="visible-lg visible-md hidden-sm hidden-xs">
                @Html.DisplayNameFor(model => model.States)
            </th>
            <th class="visible-lg visible-md hidden-sm hidden-xs">
                @Html.DisplayNameFor(model => model.ZipCode)
            </th>
            <th class="visible-lg visible-md hidden-sm hidden-xs">
                @Html.DisplayNameFor(model => model.NumberOfApart)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BuildingPhone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Manager)
            </th>
            <th></th>
        </tr>
    </table>
</div>
<div class="row ">
    <table class="table table-striped table-hover">

        @foreach (var item in Model)
        {
            <tr class="Locations_height hollow2" onclick="location.href='/building/buildingProfile/?BuildingID=@item.ID'" style="  ">
                <td class="visible-lg visible-md hidden-sm hidden-xs">
                    <button type="button"
                            class="btn btn-link"
                            onclick="location.href = '@Url.Action("BuildingProfile", "Building", new {BuildingID = item.ID})'">
                        @Html.DisplayFor(modelItem => item.BuildingName)
                    </button>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
                <td class="visible-lg visible-md hidden-sm hidden-xs ">
                    @Html.DisplayFor(modelItem => item.City)
                </td>
                <td class="visible-lg visible-md hidden-sm hidden-xs">
                    @Html.DisplayFor(modelItem => item.States)
                </td>
                <td class="visible-lg visible-md hidden-sm hidden-xs">
                    @Html.DisplayFor(modelItem => item.ZipCode)
                </td>
                <td class="visible-lg visible-md hidden-sm hidden-xs">
                    @Html.DisplayFor(modelItem => item.NumberOfApart)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BuildingPhone)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Manager)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
                    @Html.ActionLink("Trash", "Delete", new { id = item.ID })
                </td>
            </tr>
            @Html.HiddenFor(c=> item.ClientID)
        }

    </table>
</div>
