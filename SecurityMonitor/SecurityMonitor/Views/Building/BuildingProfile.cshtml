@model PagedList.IPagedList<SecurityMonitor.Models.ApartmentVM>
@using SecurityMonitor.Models;

@{
    ViewBag.Title = "Userprofile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using (Html.BeginForm("BuildingProfile", "Building", FormMethod.Get))
{
    <div class="container">

        
            <div class="row" style="background:#EFEFEF; margin-top:30px; border:1px solid lightgrey;">

                <div class="col-md-4">
                    @{Html.RenderPartial("_BuildingInfo", (BuildingInfoVM)ViewBag.buildingInfo);}
                </div>

                <div class="col-md-3 ">
                    <div class="col-md-12">
                        <spam class="glyphicon glyphicon-home " style="font-size: 150px; margin-top:10px; "></spam>
                    </div>
                    <div class="col-md-12">
                        <button type="button"
                                class="btn btn btn-success"
                                onclick="location.href = '@Url.Action("AddApartment", "Building", new {BuildingID = ViewBag.buildingInfo.ID})'">
                            ....Add Apartment(s)....
                        </button>
                    </div>
                    <br />
                </div>
                <div class="col-md-5">
                    <div id="map" style="height:200px; margin-top:15px; border:1px solid black;"></div>
                </div>
            </div>
            <div class="row " style="background:lightgrey;">
                <div class="col-md-3">
                    <h5>Searh By Aparment</h5>
                </div>
                <div class="col-md-3">
                </div>
                <div class="col-md-6"></div>
            </div>
            <div class="row " style="background:lightgrey; height:50px; ">
                <div class=" col-md-3">
                    <div class="input-group">
                        <span class="input-group-addon">
                            <input type="radio" id="ApartmentNumber">
                        </span>
                        <input type="text" class="form-control" id="input-search">
                    </div><!-- /input-group -->
                </div>
                <div class=" col-md-3">
                    <input type="submit" value="Search" class="btn btn-info" />
                </div>
                <div class=" col-md-6">
                    <div class="pull-right">
                        <button id="ShowURL" type="button" class="btn btn-default pull-lef">Get URL</button>

                        <button type="button" class="btn btn-default  pull-left"
                                onclick="location.href = '@Url.Action("ActivityPartial", "Building")'">
                            Resquests
                            <span class="badge badge-warning " style="background:orange;">4</span>
                        </button>


                        <button type="button" class="btn btn-default pull-left "
                                onclick="location.href = '@Url.Action("ActivityPartial", "Building")'">
                            Contact Book
                            <span class="badge badge-warning " style="background:Green;">13</span>
                        </button>

                        <button type="button" class="btn btn-default pull-lef " onclick="location.href = '@Url.Action("ActivityPartial", "Building")'">Show Log</button>

                    </div>
                </div>
                </div>
        <!--this section display a link that can be copy-->
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12" id="myURL">
            <div class="alert alert-success alert-success" role="alert" style="display:none;">
                <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                http://localhost:64083/Building/BuildingProfile?BuildingID=@Session["BuildingID"]
            </div>

        </div>
            <div class="row">
                <div>
                    page @(ViewBag.apartmentlist.PageCount < ViewBag.apartmentlist.PageNumber ? 0 : ViewBag.apartmentlist.PageNumber)
                    of @ViewBag.apartmentlist.PageCount

                    @if (ViewBag.apartmentlist.HasPreviousPage)
                {
                    if (ViewBag.searchBy != null)
                    {
                        var searchBy = ViewBag.searchBy;
                        var search = ViewBag.search;

                        <ul class="pagination pagination-sm">
                            <li> @Html.ActionLink("First", "BuildingProfile", new { page = 1, SearchBy = @searchBy, Search = @search })</li>

                            <li> @Html.ActionLink("Prev", "BuildingProfile", new { page = ViewBag.apartmentlist.PageNumber - 1, SearchBy = @searchBy, Search = @search })</li>
                        </ul>
                    }
                    else if (ViewBag.searchBy == null)
                    {
                        <ul class="pagination pagination-sm">
                            <li> @Html.ActionLink("First", "BuildingProfile", new { page = 1 })</li>

                            <li> @Html.ActionLink("Prev", "BuildingProfile", new { page = ViewBag.apartmentlist.PageNumber - 1 })</li>
                        </ul>
                    }
                }
                else
                {
                        <ul class="pagination pagination-sm">
                            <li><a href="#">First</a></li>
                            <li><a href="#">Prev</a></li>
                        </ul>
                }
                    @{
    if (ViewBag.searchBy != null)
    {
        var searchBy = ViewBag.searchBy;
        var search = ViewBag.search;

        <ul class="pagination pagination-sm">
            @for (var item = 1; item <= @ViewBag.apartmentlist.PageCount; item++)
            {
                <li><a href="BuildingProfile?page=@item&SearchBy=@searchBy&Search=@search">@item</a></li>
            }
        </ul>
    }
    else if (ViewBag.searchBy == null)
    {
        var searchBy = ViewBag.searchBy;
        var search = ViewBag.search;
        <ul class="pagination pagination-sm">
            @for (var item = 1; item <= ViewBag.apartmentlist.PageCount; item++)
            {
                <li><a href="BuildingProfile?page=@item">@item</a></li>
            }
        </ul>
    }
                    }
                    @if (ViewBag.apartmentlist.HasNextPage)
                {
                    if (ViewBag.searchBy != null)
                    {
                        var searchBy = ViewBag.searchBy;
                        var search = ViewBag.search;
                        <ul class="pagination pagination-sm">
                            <li> @Html.ActionLink("Next", "BuildingProfile", new { page = ViewBag.apartmentlist.PageNumber + 1, SearchBy = @searchBy, Search = @search })</li>

                            <li>@Html.ActionLink("Last", "BuildingProfile", new { page = ViewBag.apartmentlist.PageCount, SearchBy = @searchBy, Search = @search })</li>
                        </ul>
                    }
                    else if (ViewBag.searchBy == null)
                    {
                        <ul class="pagination pagination-sm">
                            <li> @Html.ActionLink("Next", "BuildingProfile", new { page = ViewBag.apartmentlist.PageNumber + 1 })</li>

                            <li>@Html.ActionLink("Last", "BuildingProfile", new { page = ViewBag.apartmentlist.PageCount })</li>
                        </ul>
                    }
                }
                else
                {
                        <ul class="pagination pagination-sm">
                            <li><a href="#">Next</a></li>
                            <li><a href="#">Last</a></li>
                        </ul>
                }
                </div>
            </div>

            <div class="row " style="border:1px solid lightgrey;">

                <div style=" margin-top:20px; margin-bottom:20px;">
                    @{var apartmentList = ViewBag.apartmentlist;}

                    @foreach (var item in apartmentList)
                {
                        <div class="col-md-1">
                            <button type="button" class="btn btn-info" style="margin:7px; " onclick="location.href = '@Url.Action("ApartmentProfile", "Building", new { ApartmentID = @item.ID })'">Apt: @item.ApartmentNumber </button>
                        </div>
                }
                </div>
            </div>
        </div>

}      
<!--Form ends-->

 @section scripts
{
<script src="~/Scripts/jquery-2.1.1.min.js"></script>
