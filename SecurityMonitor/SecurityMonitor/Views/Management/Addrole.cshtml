@model Doormandondemand.AspNetRoles

@{
    ViewBag.Title = "Addrole";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="row" style="padding-top:150px; padding-bottom:200px;">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12 col-lg-offset-4 col-md-offset-4 col-sm-offset-4 text-center">
        <h4>Add new Role</h4>
        </div>
        <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12 col-lg-offset-4 col-md-offset-4 col-sm-offset-4 " style="padding-left:50px;">


            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })

            <input type="submit" value="Create" class="btn btn-default form-control col-lg-4 col-md-4 col-sm-4 col-xs-12" />
        </div>
        }

    </div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
