@model IEnumerable<Doormandondemand.PendingModules>

@{
    ViewBag.Title = "PendingModules";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ServiceName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Buildings.BuildingName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ListOfModule.ModuleName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ServiceName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Buildings.BuildingName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ListOfModule.ModuleName)
        </td>
        <td>
          @using(@Html.BeginForm("approve","Management",new{ ServiceName = item.ServiceName, BuildingID = item.BuildingID, ListOfModuleID = item.ListOfModuleID, PendingID = @item.ID }))
          {
            <input type="submit" value="Approve"/>
            }
            
            @Html.ActionLink("Denied", "denied", new { PendingID=item.ID }) 
        </td>
    </tr>
}

</table>
