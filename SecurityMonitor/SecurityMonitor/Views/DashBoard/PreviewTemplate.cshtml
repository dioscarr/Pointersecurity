@model List<SecurityMonitor.Models.MasterProfileVM>

@{
    ViewBag.Title = "PreviewTemplate";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="row">

    <div class="col-md-3" > </div>
    <div class="col-md-6 crema requestformbox" style="padding-top:20px;">




        @{

            foreach (var item in Model)
            {


                switch (item.Controller)
                {
                    case "1":
                        <div class="row">
                            <div class="col-md-2  " style="padding-bottom:22px;"></div>
                            <div class="col-md-2 text-right" style="padding-bottom:8px;">
                                <h6>
                                    @item.Label
                                </h6>
                            </div>
                            <div class="col-md-6 pull-left ">
                                <h6>
                                    @Html.TextBox(item.Label, null, new { @class = "form-control" })
                                </h6>
                            </div>
                            <div class="col-md-2  " style="padding-bottom:22px;"></div>
                        </div>
                        break;
                    case "2":
                    <div class="row">
                        <div class="col-md-4  " style="padding-bottom:22px;"></div>
                        <div class="col-md-7  ">
                            <h6>@Html.CheckBox(item.Label, new { id = item.ID }) @item.Label </h6>

                        </div>
                        <div class="col-md-1  " style="padding-bottom:22px;"></div>
                    </div>
                        break;
                    case "3":
                    <div class="row">
                        <div class="col-md-4  " style="padding-bottom:22px;"></div>
                        <div class="col-md-4  " style="padding-top:-20px;">
                            <h6>@Html.RadioButton("RB", true) @Html.Label(item.Label)</h6>

                        </div>
                        <div class="col-md-4  " style="padding-bottom:22px;"></div>
                    </div>
                        break;
                    case "4":
                    <div class="row">
                        <div class="col-md-4  " style="padding-bottom:22px;"></div>

                        <div class="col-md-6">@Html.TextArea("TArea", new { @class = "form-control", @rows = "5", PlaceHolder = @item.Label })</div>
                        <div class="col-md-2  " style="padding-bottom:22px;"></div>
                    </div>
                        break;
                    case "5":
                    <div class="row">
                        <div class="col-md-4  " style="padding-bottom:22px;"></div>
                        <div class="col-md-4  ">
                            <h6>
                                @Html.Label(item.Label)
                                @Html.Editor("editor")
                            </h6>
                        </div>
                        <div class="col-md-4  " style="padding-bottom:22px;"></div>
                    </div>
                        break;

                }

            }
        }
    </div>


   
</div>
